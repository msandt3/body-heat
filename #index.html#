        <script type="text/javascript" src="scripts/heatmap.js"></script>
        <script type="text/javascript">
    
    
        window.onload = function(){
            var xx = h337.create({"element":document.getElementById("heatmapArea"), "radius":10, "visible":true});
            
            xx.get("canvas").onclick = function(ev){
                var pos = h337.util.mousePosition(ev);
                xx.store.addDataPoint(pos[0],pos[1]);
            };
            
            document.getElementById("gen").onclick = function(){
                xx.store.generateRandomDataSet(100);
            };
        };
        
        </script>
